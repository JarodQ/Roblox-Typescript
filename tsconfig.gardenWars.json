{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noLib": true,
    "strict": true,
    "module": "commonjs",
    "moduleDetection": "force",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@rbxts"],
    "rootDir": "src",
    "outDir": "out"
  },
  "include": ["src/GardenWars/**/*", "src/Common/**/*"]
}